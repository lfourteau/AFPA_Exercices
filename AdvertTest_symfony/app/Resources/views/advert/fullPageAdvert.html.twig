{% extends 'base.html.twig' %}

{% block body %}
    
{#     Carroussel   #}
<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img src="{{asset ('Images/' ~advert.photo1)}}" alt="{{advert.model.brand.name}} {{advert.model.name}} 1">
    </div>

    <div class="item">
      <img src="{{asset ('Images/' ~advert.photo2)}}" alt="{{advert.model.brand.name}} {{advert.model.name}} 2">
    </div>

    <div class="item">
      <img src="{{asset ('Images/' ~advert.photo3)}}" alt="{{advert.model.brand.name}} {{advert.model.name}} 3">
    </div>

  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
    
    
    
<div class ="container">
    <div class ="row">
        <div class = "col-sm-8">
<h2>{{advert.title}}</h2>
            
            <h3>Description :</h3> <h4>{{advert.description}}</h4>
            <div id ="advertInfosFlexDiv">
                <div class ="advertInfos" title ="Kilometers"><h4></h4> {{advert.km}} Km</div>
                <div class ="advertInfos" title ="Construction year"><h4></h4> {{advert.years}}</div>
                <div class ="advertInfos" title ="Price"><h4></h4> {{advert.prices}} <span class ="glyphicon glyphicon-euro"></span></div>
                <div><span class ="glyphicon glyphicon-calendar"></span> {{advert.date|date('d/m/Y')}} </div>
            </div>
            
        </div>
        <div class = "col-sm-1">
        </div>
        <div class = "col-sm-3">
            <p><h4>  <span class ="glyphicon glyphicon-user"></span> {{userInformations.nickname}}</h4> </p>
            <p><span class ="glyphicon glyphicon-envelope"></span> {{userInformations.email}} </p>
            <p><span class ="glyphicon glyphicon-earphone"></span> {{userInformations.phone}} </p>
            
        </div>
            
    </div>
    </div>
    
    
    
    



{% endblock %}
