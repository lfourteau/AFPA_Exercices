{% extends 'base.html.twig' %}

{% block body %}
    {% include 'advert/navbar.html.twig' %} 
    {% if adverts != null  %}
        <p><h1>Adverts list</h1></p>

        <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Prices</th>
                <th>Km</th>
                <th>Year construction</th>
                <th>Date</th>
                <th>Photo1</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
        {% for advert in adverts %}
            <tr>
                <td><a href="{{ path('advert_show', { 'id': advert.id }) }}">{{ advert.title }}</a></td>
                <td>{{ advert.description }}</td>
                <td>{{ advert.prices }}</td>
                <td>{{ advert.km }}</td>
                <td>{{ advert.years }}</td>
                <td>{% if advert.date %}{{ advert.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ advert.photo1 }}</td>
                <td>
                    <a href="{{ path('advert_edit', { 'id': advert.id }) }}"><button title = "Edit" type="button" class="btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></a>                 
                    <a href="{{ path('advert_delete', { 'id': advert.id }) }}"><button title = "Delete" type="button" class="btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button></a>


                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% else %}
        <br>
        Aucune annonce ne correspond Ã  votre recherche
    {% endif %}    
{% endblock %}
  